<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tvs.comet.activities.DashboardActivity"
    android:background="@drawable/bg_copy">

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/avatar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/comet"
        android:layout_above="@+id/scrollView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/iv_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bell_ring"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_notification"
        android:id="@+id/scrollView2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tvs.comet.fonts.TextViewRalewaySemiBold
                android:id="@+id/tv_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Dashboard"
                android:layout_centerHorizontal="true"
                android:textColor="#efefef"
                android:textSize="14sp"
                android:layout_marginTop="30dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dashboard"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"/>

            <com.tvs.comet.fonts.TextViewRalewayMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv"
                android:layout_centerHorizontal="true"
                android:text="We protect your compliances all safer"
                android:textSize="10sp"
                android:textColor="#efefef"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="15dp"/>

        </RelativeLayout>

    </ScrollView>





</RelativeLayout>
