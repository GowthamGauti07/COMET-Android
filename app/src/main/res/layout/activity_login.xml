<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_copy"
    tools:context="com.tvs.comet.activities.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="100dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:background="@drawable/comet_copy"/>

        <com.tvs.comet.fonts.TextViewRalewaySemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compliance Observations Measures Enablement Tracker"
            android:textColor="#efefef"
            android:layout_marginEnd="70dp"
            android:textSize="12sp"
            android:layout_below="@id/iv_title"
            android:layout_marginTop="10dp"/>

        <com.tvs.comet.fonts.TextViewRalewayMedium
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We protect your compliances all safer"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:textColor="#efefef"
            android:textSize="10dp"/>

        <com.tvs.comet.fonts.ButtonRalewayMedium
            android:id="@+id/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="Sign In"
            android:textColor="#fb3353"
            android:textSize="16dp"
            android:layout_marginBottom="66dp"
            android:layout_above="@+id/tv"/>

        <com.tvs.comet.fonts.TextViewRalewayMedium
            android:id="@+id/tv_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password ?"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_above="@+id/btn_sign_in"
            android:layout_marginBottom="36dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_forgot_password"
            android:layout_marginBottom="17dp"
            android:textColorHint="#ffffff"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">


            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="Password"
                android:textColorHint="#ffffff"
                android:backgroundTint="#ffffff"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:textColor="#ffffff"
                android:textSize="16sp" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/til_password"
            android:layout_marginBottom="17dp"
            android:textColorHint="#ffffff"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">


            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="Username"
                android:textColorHint="#ffffff"
                android:backgroundTint="#ffffff"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="#ffffff"
                android:textSize="16sp" />


        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>



</RelativeLayout>
