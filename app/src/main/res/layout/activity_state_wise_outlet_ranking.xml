<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StateWiseRankingActivity"
    android:background="@drawable/bg_copy_2">

    <RelativeLayout
        android:id="@+id/activity_asp_finance_form_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/activity_asp_finance_form_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/back_copy"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/comet"
            android:layout_alignTop="@+id/activity_asp_finance_form_iv"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_below="@+id/activity_asp_finance_form_rl">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true">

            <com.tvs.comet.fonts.TextViewRalewayBold
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State-wise Outlet Ranking"
                android:textColor="#ffffff"
                android:textSize="16dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="4dp"
                android:background="#ffffff">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.tvs.comet.fonts.TextViewRalewaySemiBold
                        android:id="@+id/tv_cv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Compliance Verified"
                        android:textColor="#333333"
                        android:textSize="13dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"/>

                    <com.tvs.comet.fonts.TextViewOpenSansRegular
                        android:id="@+id/tv_cv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="62dp"
                        android:layout_marginTop="16dp"
                        android:text="123"
                        android:textColor="#333333"
                        android:textSize="13dp"/>
                    
                    <View
                        android:id="@+id/v1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#222529"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@+id/tv_cv"
                        android:layout_marginTop="10dp"/>

                    <com.tvs.comet.fonts.TextViewRalewaySemiBold
                        android:id="@+id/tv_cp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Compliance Processed"
                        android:layout_below="@+id/v1"
                        android:textColor="#333333"
                        android:textSize="13dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"/>

                    <com.tvs.comet.fonts.TextViewOpenSansRegular
                        android:id="@+id/tv_cp_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="62dp"
                        android:layout_marginTop="16dp"
                        android:layout_below="@+id/v1"
                        android:text="123"
                        android:textColor="#333333"
                        android:textSize="13dp"/>

                    <View
                        android:id="@+id/v2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#222529"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@+id/tv_cp"
                        android:layout_marginTop="10dp"/>

                    <com.tvs.comet.fonts.TextViewRalewaySemiBold
                        android:id="@+id/tv_pt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending Tasks"
                        android:textColor="#333333"
                        android:layout_below="@+id/v2"
                        android:textSize="13dp"
                        android:layout_marginBottom="13dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"/>

                    <com.tvs.comet.fonts.TextViewOpenSansRegular
                        android:id="@+id/tv_pt_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="62dp"
                        android:layout_marginTop="16dp"
                        android:layout_below="@+id/v2"
                        android:text="23"
                        android:textColor="#333333"
                        android:textSize="13dp"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>





</RelativeLayout>
