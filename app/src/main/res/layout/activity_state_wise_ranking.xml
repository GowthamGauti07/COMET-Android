<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StateWiseRankingActivity"
    android:background="@drawable/bg_copy_2">

    <RelativeLayout
        android:id="@+id/activity_asp_finance_form_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/activity_asp_finance_form_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/back_copy"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/comet"
            android:layout_alignTop="@+id/activity_asp_finance_form_iv"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/activity_asp_finance_form_rl">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true">

            <com.tvs.comet.fonts.TextViewRalewayBold
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State-wise Ranking"
                android:textSize="16sp"
                android:textColor="#efefef"
                android:layout_marginStart="28dp"/>

            <com.tvs.comet.fonts.TextViewRalewayBold
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                android:textSize="14sp"
                android:textColor="#efefef"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="29dp"
                android:drawableRight="@drawable/triangle_2"
                android:drawablePadding="7dp"/>

            <android.support.v7.widget.CardView
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="9dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:layout_below="@+id/tv3"
                app:cardCornerRadius="4dp"
                android:elevation="5dp">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:layout_below="@+id/cv"
                app:cardCornerRadius="4dp"
                android:elevation="5dp"
                android:layout_marginBottom="40dp">

                <com.tvs.comet.fonts.TextViewRalewayMedium
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending Tasks"
                    android:textSize="16sp"
                    android:textColor="#fb3353"
                    android:layout_marginTop="13dp"
                    android:layout_marginStart="10dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_below="@+id/tv4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="42dp"
                    android:layout_marginBottom="12dp"/>

            </android.support.v7.widget.CardView>

            <com.tvs.comet.fonts.TextViewRalewayMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We protect your compliances all safer"
                android:textSize="10sp"
                android:textColor="#efefef"
                android:layout_marginTop="28dp"
                android:layout_marginStart="28dp"
                android:layout_below="@+id/cv2"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginBottom="30dp"/>

        </RelativeLayout>
    </ScrollView>





</RelativeLayout>
